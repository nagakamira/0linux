WGET=http://download.videolan.org/pub/videolan/$NAMESRC/$VERSION/$NAMESRC-$VERSION.tar.xz
DESC="Le lecteur multimédia polyvalent VLC"

telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# On corrige les polices par défaut :
sed -i -e 's:truetype/freefont:TTF:g' modules/text_renderer/freetype.c
sed -i -e 's:truetype/ttf-dejavu:TTF:g' modules/visualization/projectm.cpp

# On supprime des avertissements inutiles :
sed -i 's/ifndef __FAST_MATH__/if 0/g' configure.ac

# On supprime els tests automatiques :
find . -name 'Makefile.in' -exec sed -i 's/\(..*\)check-TESTS/\1/' {} \;

# On force la compilation avec Qt 4 :
cat $CWD/vlc.qt-select.patch | patch -p1
export QT_SELECT=qt4

# On régénère les outils de compilation :
autoreconf -vif

# Compilation avec FFMPEG 2.x et Samba 4 :
PKG_CONFIG_PATH="/usr/lib${LIBDIRSUFFIX}/ffmpeg-2.x/pkgconfig" \
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
LDFLAGS+=" -I/usr/include/samba-4.0 "
LUAC=/usr/bin/luac \
LUA_LIBS="$(pkg-config --libs lua)" \
./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--mandir=/usr/man \
	--infodir=/usr/info \
	--docdir=/usr/doc/${NAMETGZ}-${VERSION} \
	--disable-freerdp \
	--disable-rpath \
	--disable-update-check \
	--enable-a52 \
	--enable-aa \
	--enable-avcodec \
	--enable-avformat \
	--enable-dc1394 \
	--enable-dvbpsi \
	--enable-dvdnav \
	--enable-faad \
	--enable-fast-install \
	--enable-flac \
	--enable-libass \
	--enable-libcddb \
	--enable-live555 \
	--enable-lua \
	--enable-ncurses \
	--enable-nls \
	--enable-ogg \
	--enable-opus \
	--enable-qt=4 \
	--enable-realrtsp \
	--enable-run-as-root \
	--enable-schroedinger \
	--enable-sftp \
	--enable-shared \
	--enable-shout \
	--enable-speex \
	--enable-svg \
	--enable-telx \
	--enable-theora \
	--enable-twolame \
	--enable-upnp \
	--enable-vcdx \
	--enable-vorbis \
	--enable-x264 \
	--build=${PKGARCH}-0linux-linux-gnu

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}

# On place les icônes dans toutes les résolutions :
for res in 16 32 48 128; do
	mkdir -p ${PKG}/usr/share/icons/hicolor/${res}x${res}/apps/
	cp share/icons/${res}x${res}/vlc.png ${PKG}/usr/share/icons/hicolor/${res}x${res}/apps/
done

installer_doc
creer_post_installation
stripper
empaqueter

